<div class="row">
	<div class="col-md-6">
	<%= form_for @story, html: {class: "form"} do |f| %>
		<div class="form-group">
			<%= f.label "Title" %>
			<%= f.text_field :title, class: "form-control" %>
		</div>
		<%= f.submit class: "btn btn-success" %>
		<%= link_to "Cancel", story_path(@story), class: "btn btn-warning" %>
	<% end %>
	</div>
</div>