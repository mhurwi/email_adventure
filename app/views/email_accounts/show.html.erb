<h1><%= @character.full_name %>'s Email Account</h1>

<div class="row">
	<div class="col-md-6">
		<p>
			<%= link_to "Back to character's page", user_character_path(@user, @character) %>
		</p>
		<p>Address: <%= @email_account.address %> </p>
		<p>User Name: <%= @email_account.user_name %> </p>
		<p>SMTP Address: <%= @email_account.smtp_host %> </p>
		<p>Domain: <%= @email_account.domain %> </p>
		<p>Password: ************ </p>
	</div>
</div>

<div class="row">
	<div class="col-md-6">
		<p>
			<%= link_to "Edit Email Account", edit_user_character_email_account_path(@user, @character, @email_account), class: "btn btn-warning" %>
		</p>
	</div>
</div>

<div class="row">
	<div class="col-md-6">
		<p>
			<%= link_to "Delete Email Account", user_character_email_account_path(@user, @character, @email_account), class: "btn btn-danger", method: 'delete', data: {confirm: "Are you sure you want to delete this email account?  This cannot be undone."} %>
		</p>
	</div>
</div>