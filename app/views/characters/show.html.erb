<h1>Character: <%= @character.full_name %></h1>


<div class="row">
	<div class="col-md-6">
	<table class="table">
		<tbody>
			<tr>
				<td>Name:</td>
				<td><%= @character.full_name %></td>
			</tr>
		</tbody>
	</table>
	</div>
</div>

<div class="row">
	<div class="col-md-6">
	<h2>Email Settings</h2>
	
		<% if @character.email_account? %>
		<p><%= @character.email_account.address %></p>
		<p>
			<%= link_to "View Email Account", user_character_email_account_path(@user, @character, @character.email_account), class: "btn btn-default" %>
		</p>
		<% else %>
		<p>
				This character has no email account!
				<%= link_to 'Create Email Account', new_user_character_email_account_path(@user, @character) %>
		</p>
		<% end %>


	</div>

</div>




<div class="row">
	<div class="col-md-6">
		<p>
			<%= link_to "Edit Character", 
							edit_user_character_path(@user, @character),
							class: "btn btn-warning" %>
		</p>

		<p>
			<%= link_to "Delete Character", 
							user_character_path(@user, @character),
							class: "btn btn-danger", 
							method: 'delete', 
							data: { confirm: "Are you sure? This character will be deleted forever."} %>

		</p>		
	</div>
</div>
