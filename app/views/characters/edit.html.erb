<h1>Edit Character</h1>

<%= render 'characters/form' %>

<div class="row">
	<div class="col-md-6">
		<h3>Email Settings</h3>
		<% if @character.email_account.present? %>
			<p>address: <%= @character.email_account.address %></p>
			<%= link_to "Goto Email Account", user_character_email_account_path(@user, @character, @character.email_account), class: "btn btn-default" %>

		<% else %>
			<p>
				This character has no email account!
				<%= link_to 'Create Email Account', new_user_character_email_account_path(@user, @character) %>
			</p>
		<% end %>
	</div>
</div>